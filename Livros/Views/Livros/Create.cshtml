@model Livros.Models.LivrosModel

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<h4>Livros Model</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TituloLivro" class="control-label">Titulo</label>
                <input asp-for="TituloLivro" class="form-control" />
                <span asp-validation-for="TituloLivro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnoPublicacaoLivro" class="control-label">Data Publicação</label>
                <input asp-for="AnoPublicacaoLivro" class="form-control" />
                <span asp-validation-for="AnoPublicacaoLivro" class="text-danger"></span>
            </div>
            <br>
            <div class="d-grid gap-2">
                <input type="submit" value="Criar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
