@model Livros.Models.LivroAutorEditoraModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Livro,Autor,Editora Model</h4>
    <hr />
    <div class="col-md-6">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="IdLivroAutorEditora" />
        <div class="form-group">
            <label asp-for="fk_LivrosID" class="control-label">Livro</label>
            <input asp-for="Livros.TituloLivro" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="fk_AutorID" class="control-label">Autor</label>
            <input asp-for="Autores.NomeAutor" class="form-control" disabled />

        </div>
        <div class="form-group">
            <label asp-for="fk_EditoraID" class="control-label">Editora</label>
            <input asp-for="Editoras.NomeEditora" class="form-control" disabled />
        </div>
        <br>

        <div class="d-grid gap-2">
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalConfirmationDelete">Deletar</button>

            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
        </div>
    </div>

</div>

@* Model *@
<div class="modal fade" id="modalConfirmationDelete" tabindex="-1" role="dialog" aria-labelledby="deleteModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModal">Apagar Livro,Autor,Editora</h5>
                @*                 <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button> *@
            </div>
            <div class="modal-body">
                <p>Excluir Livro,Autor,Editora @Model.Livros.TituloLivro.ToUpper()?</p>
            </div>
            <div class="modal-footer">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="IdLivroAutorEditora" />
                    <input type="submit" value="Deletar" class="btn btn-warning" /> |
                    <button type="submit" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                </form>
            </div>
        </div>
    </div>
</div>