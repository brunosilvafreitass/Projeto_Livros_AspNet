@model Livros.Models.LivroAutorEditoraModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Livro,Autor,Editora Model</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdLivroAutorEditora" />
            <div class="form-group">
                <label asp-for="fk_LivrosID" class="control-label">Livro</label>
                <select asp-for="fk_LivrosID" class="form-control" asp-items="ViewBag.Livros"></select>
                <span asp-validation-for="fk_LivrosID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fk_AutorID" class="control-label">Autor</label>
                <select asp-for="fk_AutorID" class="form-control" asp-items="ViewBag.Autores"></select>
                <span asp-validation-for="fk_AutorID" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="fk_EditoraID" class="control-label">Editora</label>
                <select asp-for="fk_EditoraID" class="form-control" asp-items="ViewBag.Editoras"></select>
                <span asp-validation-for="fk_EditoraID" class="text-danger"></span>
            </div>
            <br>
            <div class="d-grid gap-2">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
