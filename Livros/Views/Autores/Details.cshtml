@model Livros.Models.AutoresModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<h4>AutoresModel</h4>
<hr />


<div class="row">
    <div class="col-md-6">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdAutor" />
            <div class="form-group">
                <label asp-for="NomeAutor" class="control-label">Nome</label>
                <input asp-for="NomeAutor" class="form-control" disabled/>
                <span asp-validation-for="NomeAutor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NacionalidadeAutor" class="control-label">Nacionalidade</label>
                <input asp-for="NacionalidadeAutor" class="form-control" disabled/>
                <span asp-validation-for="NacionalidadeAutor" class="text-danger"></span>
            </div>
            <br>
            <div class="d-grid gap-2">
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.IdAutor">Editar</a>
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
    </div>
</div>
